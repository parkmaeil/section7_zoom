<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.repository.BookDAOMyBatis">

     <select id="bookList" resultType="com.example.entity.BookDTO"
             parameterType="com.example.entity.Criteria">
         select * from book  limit  #{pageStart}, #{perPageNum}
     </select>

    <delete id="bookDelete">
        delete from book where num=#{num}
    </delete>

    <insert id="bookInsert" parameterType="com.example.entity.BookDTO">
        insert into book(title, price, author, page)
        values(#{title},#{price},#{author},#{page})
    </insert>

    <select id="bookView" resultType="com.example.entity.BookDTO">
        select * from book where num=#{num}
    </select>

    <update id="bookUpdate" parameterType="com.example.entity.BookDTO">
        update book set
        title=#{title},
        price=#{price},
        author=#{author},
        page=#{page}
        where num=#{num}
    </update>

    <select id="totalCount" resultType="int">
        select count(*) from book
    </select>

    <insert id="addToCart" parameterType="com.example.entity.CartDTO">
        INSERT INTO cart (customer_id, book_num, quantity)
        VALUES (#{customer_id}, #{book_num}, #{quantity})
    </insert>

    <select id="cartList" resultType="com.example.entity.CartBookDTO">
        select *
        from cart c
        inner join book b
        on c.book_num=b.num
        where c.customer_id=#{customer_id}
    </select>

    <delete id="removeCart">
        delete from cart
        where cart_number=#{cartNumber}
    </delete>
    <update id="quantityUpdate" parameterType="java.util.Map">
        update cart
        set quantity=#{quantity}
        where cart_number=#{cartNumber}
    </update>

</mapper>